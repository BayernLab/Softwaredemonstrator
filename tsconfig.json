{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "esnext",
      "scripthost",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}